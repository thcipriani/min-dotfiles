[user]
	name = Tyler Cipriani
	email = tcipriani@wikimedia.org
[alias]
	hist = log --oneline
	hist2 = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	hist3 = log --oneline --abbrev-commit --all --graph --decorate
	up = "!git remote update -p; git merge --ff-only @{u}"
	last = log -1 HEAD
	ack = grep --break --heading --line-number
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
[color]
	ui = true
[push]
	default = matching
[status]
	submoduleSummary = true
[diff]
	submodule = log
